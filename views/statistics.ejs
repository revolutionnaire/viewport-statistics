<!DOCTYPE html>
<html>
  <%- include('includes/head.ejs'); %>
<body id="statistics">
  <center>
    <h1>Averages</h1>
    <% if (averageViewport) { %>
      <table>
        <tr>
          <td>
            <h4 class="label">Desktop</h4>
            <hr />
            <h3 class="data"><%= averageViewport.desktop %><sup>px</sup></h3>
            <hr />
            <h4 class="data-secondary">Total of <%= Object.keys(averageViewport.desktop).length; %> visitors</h4>
          </td>
          <td>
            <h4 class="label">Mobile</h4>
            <hr />
            <h3 class="data"><%= averageViewport.mobile %><sup>px</sup></h3>
            <hr />
            <h4 class="data-secondary">Total of <%= Object.keys(averageViewport.mobile).length; %> visitors</h4>
          </td>
        </tr>
      </table>
    <% } else { %>
      <p>No viewport data available yet.</p>
    <% } %>
    <a href="/">Back to your dimensions</a>
  </center>
</body>
</html>
